{
"PAD_token": 0,
"SOS_token": 1,
"EOS_token": 2,
"UNK_token": 3,

"embed_size": 256,
"hidden_size": 256,
"num_layers": 2,
"bidirectional": true,
"rnn_cell": "gru",
"attn_mode": "concat",
"attn_hidden_size": 256,
"dropout": 0.1,
"with_bridge": false,
"tie_embedding": true,

"progress_indicator": "tqdm",
"max_length": 20,
"batch_first": true,
"train_batch_size": 16,
"eval_batch_size": 64,
"gradient_accumulation": 2,
"grad_clip": 5.0,
"teacher_forcing_ratio": 0.8,
"optimizer": "Adam",
"weight_decay": 1e-5,
"learning_rate": 1e-4,
"scheduler": "StepLR",
"scheduler_step_size": 80,
"scheduler_gamma": 1e-1,
"num_epochs": 100,
"early_stop_num": -1,
"save_every_epoch": 25,
"plot_loss_group_by": "Update",
"plot_loss_group_by_every": 100,
"evaluate_before_train": true,
"save_best_model": true,
"save_dir": "./checkpoints/"
}